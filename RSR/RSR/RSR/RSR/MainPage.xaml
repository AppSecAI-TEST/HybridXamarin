<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RSR"
             x:Class="RSR.MainPage"
             BackgroundImage="main_bg.jpg">

    <ContentPage.Content>

    <StackLayout>
        <Grid BackgroundColor="LightSeaGreen" HeightRequest="72">
                <Label Text="RSR Revalidatieservice" TextColor="White" Font="Large" Margin="20,25,0,0"/>
                <Image Source="main_btn_info.png" HorizontalOptions="EndAndExpand" Margin="0,20,10,20" HeightRequest="32">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="onInfoIconClicked"/>
                </Image.GestureRecognizers>
                </Image>
        </Grid>

        <Button VerticalOptions="EndAndExpand" 
                Margin="20,0,20,15"
                Text="RSR Pechhulp"
                BackgroundColor="LightSeaGreen"  
                TextColor="White"
                Clicked="StartMap"/>
    </StackLayout>
    </ContentPage.Content>

</ContentPage>